{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend: FastAPI (Uvicorn)",
      "type": "python",
      "request": "launch",
      "python": "${workspaceFolder}/backend/venv/Scripts/python.exe",
      "module": "uvicorn",
      "args": [
        "backend.main:app",
        "--host",
        "0.0.0.0",
        "--port",
        "8000",
        "--reload"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Frontend: React Dev Server",
      "type": "pwa-node",
      "request": "launch",
      "cwd": "${workspaceFolder}/frontend",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "start"
      ],
      "console": "integratedTerminal"
    }
  ],
  "compounds": [
    {
      "name": "Full Stack: Backend + Frontend",
      "configurations": [
        "Backend: FastAPI (Uvicorn)",
        "Frontend: React Dev Server"
      ]
    }
  ]
}
